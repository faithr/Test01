#container(layout="row",
        ng-controller="TopNavCtrl as tc")
    article.box1(flex)
        md-button.md-icon-button(ng-click="tc.toggleSidenav('left')", hide-gt-sm='', aria-label="Settings")
            md-icon(aria-label='Menu', md-svg-icon='/img/Hamburger.svg')
        img(flex="" layout='row', layout-xs='column',  src="img/stretchkids-logo.jpg" alt="logo" height="72" width="300")


        //md-button.md-raised.mid.left(ng-click="close()" ) Sign In
        //md-button.md-raised.mid.left(ng-click="close()") Register


    nav.box2(flex)
        section(layout='row', layout-xs='column', hide-xs,  hide-gt-xs, show-gt-sm layout-align='center center', layout-wrap)
            md-button.md-raised.mid(ng-click="$mdOpenMenu($event)") FILTER
            md-button.md-raised.mid(ng-click="$mdOpenMenu($event)") MAP
            md-button.md-raised.mid(ng-click="$mdOpenMenu($event)") SORT

    .mid(layout='row')
        section(hide-gt-sm='', flex='', layout-align='left left')
            md-button.btn1(ng-click="close()") Sign In
            md-button.btn1(ng-click="close()") Register
            md-button.btn1(ng-click="close()") Options



    aside.box3(flex)
        md-input-container.md-icon-float.md-block.padding(hide-xs)
            label.town Bridgewater, NJ
            md-icon location
            input(ng-model='user.city', type='text')
            //md-button.md-raised.mid.left(ng-click="close()" ) Sign In
            //md-button.md-raised.mid.left(ng-click="close()" ) Register


        md-input-container.md-icon-float.md-block(hide-xs)
            label Enter search keyword
            md-icon search
            input(ng-model='user.search', type='text')






